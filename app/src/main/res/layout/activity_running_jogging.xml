<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workouts.RunningJoggingActivity"
    android:background="@drawable/background">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Running or Jogging"
                android:textColor="#4F2912"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/running_icon" />

            <LinearLayout
                android:id="@+id/description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/description"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="start"
                    android:text="Choose Your Workout:"
                    android:textColor="#4F2912"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/description_2"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:gravity="start"
                    android:text="In the dropdown menus below, select the type of workout you prefer:"
                    android:textColor="#4F2912"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/running_bold"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:gravity="start"
                    android:text="Running"
                    android:textColor="#4F2912"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/description_3"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:gravity="start"
                    android:text="Opt for a high-intensity session to push your limits and boost cardiovascular fitness."
                    android:textColor="#4F2912"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/jogging_bold"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:gravity="start"
                    android:text="Jogging"
                    android:textColor="#4F2912"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/description_4"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:gravity="start"
                    android:text="Select a steady-paced exercise, perfect for beginners or those seeking a lighter workout to enjoy the scenery and build endurance gradually."
                    android:textColor="#4F2912"
                    android:textSize="16sp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/unchangable_components_jogging_running"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp">

                <TextView
                    android:id="@+id/running_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:text="Running"
                    android:textColor="#4F2912"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/running_button"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/closed_bodies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/running_details_image_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/runningclosedbody"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/running_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/running_details_image_opened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/joggingopenedbody"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/running_details_body"
                    android:layout_width="370dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/jogging_drop_list_body"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/running_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="350dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="55dp"
                    android:src="@drawable/text_running"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jogging_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="405dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/jogging_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Jogging"
                    android:textColor="#4F2912"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/jogging_details_image_opened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/joggingopenedbody"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/jogging_details_image_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/joggingclosedbody"
                    android:visibility="visible" />
                <Button
                    android:id="@+id/jogging_button"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:alpha="0" />
                <ImageView
                    android:id="@+id/jogging_details_body"
                    android:layout_width="370dp"
                    android:layout_height="400dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:src="@drawable/jogging_drop_list_body"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/jogging_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="55dp"
                    android:src="@drawable/text_jogging"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/panel_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/panel_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottompanelandbackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:alpha="0"/>
            <Button
                android:id="@+id/btn_exercise"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1100dp"
            android:src="@drawable/update_button_body"
            android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>