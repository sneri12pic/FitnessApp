<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/panel_top_exercise"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/workoutbox" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/img_running"
            android:layout_width="344dp"
            android:layout_height="135dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/running_image_oval_text"
            android:scaleType="fitXY"/>
        <Button
            android:id="@+id/btn_runningimage"
            android:layout_width="344dp"
            android:layout_height="135dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_running"
            android:onClick="goToRunning"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/img_hiking"
            android:layout_width="344dp"
            android:layout_height="135dp"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hiking_image_oval_text"
            android:scaleType="fitXY"/>
        <Button
            android:id="@+id/btn_hikingimage"
            android:layout_width="344dp"
            android:layout_height="135dp"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_running"
            android:onClick="goToHiking"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/img_cycling"
            android:layout_width="344dp"
            android:layout_height="135dp"
            android:layout_marginTop="430dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cycling_image_oval_text"
            android:scaleType="fitXY"/>
        <Button
            android:id="@+id/btn_cyclingimage"
            android:layout_width="344dp"
            android:layout_height="135dp"
            android:layout_marginTop="430dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_running"
            android:onClick="goToHiking"
            android:alpha="0"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/panel_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/panelbottomexercise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:alpha="0"
                android:onClick="goToHomeActivity" />
            <Button
                android:id="@+id/btn_exercise"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:alpha="0"
                android:onClick="goToExerciseActivity"/>
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0"
                android:onClick="goToProfileActivity" />
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:alpha="0"
                android:onClick="goToSettingsActivity"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>