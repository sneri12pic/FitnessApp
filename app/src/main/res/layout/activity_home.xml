<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity"
    android:background="@drawable/background">
    <ImageView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/name" />

    <ImageView
        android:id="@+id/btn_update_image"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:src="@drawable/update_button_body" />
    <TextView
        android:id="@+id/text_update_button_stroked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:text="Update"
        android:textSize="20sp"
        android:textColor="#4F2912"
        android:shadowColor="#4F2912"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/text_update_button_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:text="Update"
        android:textSize="20sp"
        android:textColor="#F5DBCB"
        android:visibility="visible"/>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="445dp"
        android:layout_marginLeft="155dp"
        android:alpha="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <com.example.fitnessapp.GaugeView
            android:id="@+id/gaugeView"
            android:layout_width="310dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/circle_goal"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/circlegoal"
            android:visibility="visible"/>
        <EditText
            android:id="@+id/input_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set Calorie Limit"
            android:textColor="#4F2912"
            android:textColorHint="#4F2912"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:background="@android:color/transparent"
            android:layout_marginTop="260dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/inputCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Food Calories"
            android:textColor="#4F2912"
            android:textColorHint="#4F2912"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:background="@android:color/transparent"
            android:layout_marginTop="110dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txt_input_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="24sp"
            android:textColor="#F5DBCB"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btnAddFood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Add Food"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/img_add_food"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:src="@drawable/plusimage"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btn_reset_cal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="295dp"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/img_pencil_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/penciledit"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="295dp"/>
        <com.example.fitnessapp.StrokeTextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: 0 / 0"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/panel_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/panelbottomhome" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_exercise"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
