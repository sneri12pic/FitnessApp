<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".workouts.RunningJoggingActivity"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Hiking"
        android:textColor="#4F2912"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:id="@+id/description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"/>
    <RelativeLayout
        android:id="@+id/unchangable_components_jogging_running"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">
        <TextView
            android:id="@+id/arthur_seat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4F2912"
            android:text="Arthur's Seat"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/pentland_hills_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4F2912"
            android:text="Pentland Hills Regional Park"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/water_leith_hills_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4F2912"
            android:text="Water of Leith Walkway"
            android:layout_marginTop="208dp"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_arthur_seat"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:alpha="0"/>
        <Button
            android:id="@+id/btn_pentland_hills"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:alpha="0"/>
        <Button
            android:id="@+id/btn_water_leith"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="196dp"
            android:alpha="0"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/closed_bodies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:visibility="visible">
        <ImageView
            android:id="@+id/arthur_seat_details_image_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/runningclosedbody"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/pentland_details_image_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:src="@drawable/joggingclosedbody"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/water_leith_details_image_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="196dp"
            android:src="@drawable/joggingclosedbody"
            android:visibility="visible"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/arthur_seat_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/arthur_seat_details_image_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/joggingopenedbody"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/arthur_seat_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/arthur_seat_icons_dist_time"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/arthur_seat_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arthur_seat_image"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/arthur_seat_details_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="70dp"
            android:text="Arthur's Seat: This iconic hill located in Holyrood Park offers stunning views of Edinburgh and the surrounding area. The hike is relatively easy and suitable for all skill levels."
            android:textSize="16sp"
            android:textColor="#4F2912"
            android:visibility="visible"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pentland_hills_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/pentland_details_image_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="142dp"
            android:src="@drawable/joggingopenedbody"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/pentland_hills_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="146dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/pentland_icons_dist_time"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/pentland_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/pentland_image"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/pentland_details_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="70dp"
            android:text="Pentland Hills Regional Park: Just a short drive from Edinburgh, Pentland Hills offers a variety of hiking trails suitable for beginners. The Flotterstone to Glencorse Reservoir loop is a popular choice and offers beautiful views of the reservoir and surrounding hills."
            android:textSize="16sp"
            android:textColor="#4F2912"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/water_leith_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/water_leith_details_image_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:src="@drawable/joggingopenedbody"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/water_leith_hills_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="246dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/water_leith_icons_dist_time"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/water_leith_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="325dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/water_leith_image"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/water_leith_details_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="70dp"
            android:text="Water of Leith Walkway: This scenic walking route follows the Water of Leith river from Balerno to Leith, passing through the heart of Edinburgh. The path is mostly flat and well-maintained, making it suitable for all ages and abilities."
            android:textSize="16sp"
            android:textColor="#4F2912"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/panel_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottompanelworkouts" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_exercise"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1400dp"
        android:src="@drawable/update_button_body"
        android:visibility="invisible"/>
</RelativeLayout>
