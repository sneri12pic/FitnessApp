<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".ProfileActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/profilepanel"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/profilepanelbox" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_profilePic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="145dp"
        android:src="@drawable/profile_icon_picture"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/exercisebox"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/exercisebox" />

    <ImageView
        android:id="@+id/img_panel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="258dp"
        android:src="@drawable/panel" />
    <Button
        android:id="@+id/btn_panelMonday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="72dp"
        android:alpha="0" />
    <Button
        android:id="@+id/btn_panelTuesday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="109dp"
        android:alpha="0" />
    <Button
        android:id="@+id/btn_panelWednesday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="146dp"
        android:alpha="0" />
    <Button
        android:id="@+id/btn_panelThursday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="183dp"
        android:alpha="0" />
    <Button
        android:id="@+id/btn_panelFriday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="221dp"
        android:alpha="0" />
    <Button
        android:id="@+id/btn_panelSaturday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="258dp"
        android:alpha="0" />
    <Button
        android:id="@+id/btn_panelSunday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="452dp"
        android:layout_marginLeft="295dp"
        android:alpha="0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/panel_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/panelbottomprofile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:alpha="0"
                android:onClick="goToHomeActivity" />
            <Button
                android:id="@+id/btn_exercise"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0"/>
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
