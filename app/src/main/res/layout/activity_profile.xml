<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ProfileActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/profilepanel"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/profilepanelbox" />
    <ImageView
        android:id="@+id/img_profilePic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="145dp"
        android:src="@drawable/profile_icon_picture"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/exercisebox"
        android:layout_width="310dp"
        android:layout_height="260dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/exercisebox" />
    <ImageView
        android:id="@+id/img_panel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="457dp"
        android:layout_marginLeft="299dp"
        android:src="@drawable/panel" />

    <LinearLayout
        android:id="@+id/container_btn_panel_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="457dp"
        android:layout_marginLeft="72dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btn_panelMonday"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:alpha="0" />
        <Button
            android:id="@+id/btn_panelTuesday"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:alpha="0" />
        <Button
            android:id="@+id/btn_panelWednesday"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:alpha="0" />
        <Button
            android:id="@+id/btn_panelThursday"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:alpha="0" />
        <Button
            android:id="@+id/btn_panelFriday"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:alpha="0" />
        <Button
            android:id="@+id/btn_panelSaturday"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:alpha="0" />
        <Button
            android:id="@+id/btn_panelSunday"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:alpha="0" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/panel_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/panelbottomprofile" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/btn_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_exercise"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0"/>
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:alpha="0" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
